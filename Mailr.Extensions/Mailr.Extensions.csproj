    <PackageReference Include="JetBrains.Annotations" Version="2019.1.3" />
    <PackageReference Include="Reusable.Beaver" Version="14.0.11" />
    <PackageReference Include="Reusable.Core" Version="14.0.11" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions.AspNetCore" Version="14.0.11" />
    <PackageReference Include="Reusable.Quickey" Version="14.0.11" />
  </ItemGroup>

</Project>
