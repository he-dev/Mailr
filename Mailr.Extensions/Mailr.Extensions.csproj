    <PackageReference Include="Reusable.Quickey" Version="14.0.0" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions.AspNetCore" Version="14.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)'=='Debug.csproj'">
