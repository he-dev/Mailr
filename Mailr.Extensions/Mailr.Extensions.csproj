<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>Mailr.Extensions</RootNamespace>
    <Configurations>Debug;Debug.csproj;Release;Debug.nuget</Configurations>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <LangVersion>latest</LangVersion>
    <Platforms>AnyCPU</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug.csproj'">
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="3.1.2" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)'=='Debug.nuget' OR '$(Configuration)'=='Release'">
    <PackageReference Include="Reusable.Core" Version="11.0.3" />
    <PackageReference Include="Reusable.OmniLog" Version="11.0.3" />
    <PackageReference Include="Reusable.OmniLog.Abstractions" Version="11.0.3" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions" Version="11.0.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)'=='Debug.csproj'">
    <ProjectReference Include="..\..\Reusable\Reusable.Core\Reusable.Core.csproj" />
    <ProjectReference Include="..\..\Reusable\Reusable.OmniLog.SemanticExtensions\Reusable.OmniLog.SemanticExtensions.csproj">
      <ExcludeAssets>analyzers</ExcludeAssets>
    </ProjectReference>
    <ProjectReference Include="..\..\Reusable\Reusable.OmniLog\Reusable.OmniLog.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="src\Helpers\RouteNameFactory.cs" />
    <Compile Remove="src\Utilities\Mvc\Filters\Extension.cs" />
    <Compile Remove="src\ControllerType.cs" />
    <Compile Remove="src\Utilities\HttpContextExtensions.cs" />
    <Compile Remove="src\Mvc\TagHelpers\InlineClassTagHelper.cs" />
  </ItemGroup>

</Project>
