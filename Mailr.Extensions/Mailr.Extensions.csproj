<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.2;net47</TargetFrameworks>
    <RootNamespace>Mailr.Extensions</RootNamespace>
    <Configurations>Debug;Release;Debug.csproj</Configurations>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutDir>bin\Release</OutDir>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug.csproj'">
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <OutputPath>bin\Debug</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="3.1.2" />
    <PackageReference Include="Reusable.Core" Version="9.1.1" />
    <PackageReference Include="Reusable.OmniLog" Version="9.1.1" />
    <PackageReference Include="Reusable.OmniLog.Abstractions" Version="9.1.1" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions" Version="9.1.1" />
  </ItemGroup>

  <ItemGroup Condition="('$(Configuration)'=='Debug' OR '$(Configuration)'=='Release') AND '$(TargetFramework)'=='net47'">
    <PackageReference Include="Reusable.Core" Version="9.0.3" />
    <PackageReference Include="Reusable.OmniLog" Version="9.0.3" />
    <PackageReference Include="Reusable.OmniLog.Abstractions" Version="9.0.3" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions" Version="9.0.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)|$(Platform)'=='Debug.csproj|AnyCPU'">
    <ProjectReference Include="..\..\Reusable\Reusable.Core\Reusable.Core.csproj" />
    <ProjectReference Include="..\..\Reusable\Reusable.OmniLog.SemanticExtensions\Reusable.OmniLog.SemanticExtensions.csproj">
      <ExcludeAssets>analyzers</ExcludeAssets>
    </ProjectReference>
    <ProjectReference Include="..\..\Reusable\Reusable.OmniLog\Reusable.OmniLog.csproj" />
  </ItemGroup>

</Project>
